        <script>
            $(document).ready(function() {
                $('#emissionTable').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.12.1/i18n/de-DE.json"
                    },
                    "order": [[0, "asc"]] 
                });
            });
            document.querySelector('form').addEventListener('submit', function(event) {
            var searchField = document.querySelector('input[name="suche"]');
            var userInput = searchField.value;

            var sanitizedInput = userInput.replace(/[^\w\s]/gi, '');

            searchField.value = sanitizedInput;

            if (sanitizedInput !== userInput) {
            alert("Ungültige Zeichen wurden entfernt.");
            }
            });
        </script>
